<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Authors>Vadim Kandrushin</Authors>
    <Description>super simple client to manage tasks in megaplan CRM</Description>
    <RepositoryUrl>https://github.com/ihtfw/Megaplan.API</RepositoryUrl>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>nMegaplan.API</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>nMegaplan.API</Product>
    <RepositoryType>git</RepositoryType>
    <PackageTags>megaplan</PackageTags>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Version>2008.20.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>
</Project>
